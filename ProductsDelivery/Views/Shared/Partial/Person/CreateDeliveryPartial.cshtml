@model ProductsDelivery.Models.Delivery
<div class="customer-login section-top-gap-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="account_form">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <form asp-action="CreateDelivery" asp-controller="Manager" asp-anti-forgery="true">
                            <div class="validation" asp-validation-summary="ModelOnly"></div>
                            <div class="default-form-box">
                                <label asp-for="Login">Логин <span>*</span></label>
                                <input type="text" asp-for="Login" />
                                <span asp-validation-for="Login" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Password">Пароль <span>*</span></label>
                                <input type="password" asp-for="Password" />
                                <span asp-validation-for="Password" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Name">Имя <span>*</span></label>
                                <input type="text" asp-for="Name" />
                                <span asp-validation-for="Name" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Surname">Фамилия <span>*</span></label>
                                <input type="text" asp-for="Surname" />
                                <span asp-validation-for="Surname" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Patronymic">Отчество</label>
                                <input type="text" asp-for="Patronymic" />
                                <span asp-validation-for="Patronymic" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Data_Of_Birth">Дата рождения <span>*</span></label>
                                <input type="date" asp-for="Data_Of_Birth" />
                                <span asp-validation-for="Data_Of_Birth" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Mobile_Phone">Моб. телефон</label>
                                <input type="text" asp-for="Mobile_Phone" />
                                <span asp-validation-for="Mobile_Phone" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="TypeTransport">Вид транспорта <span>*</span></label>
                                <input type="text" asp-for="TypeTransport" />
                                <span asp-validation-for="TypeTransport" />
                            </div>
                            <div class="login_submit">
                                <button class="btn btn-sm btn-radius btn-default mb-4" type="submit">Создание</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
