@model ICollection<ProductsDelivery.Models.Product>
@{
    var productsItems = ViewBag.ProductsItems;
}
<div class="body-wrapper container-fluid p-0">
    <!-- content area -->
    <div class="content-wrapper" style="margin-left: 0px;">
        <div class="doc-hero-wrap">
            <div class="hero-wrap-inner">
                <h2 class="title">Склад продуктов</h2>
            </div>
        </div>
            <!-- Getting start -->
        <div class="content-section" id="users" style="display: block;">
            <div class="table_page table-responsive">
                    @if (@Model.Count == 0)
                    {
                        <h2>Нет продуктов</h2>
                    }
                    else
                    {
                        <table>
                            <thead>
                                <tr>
                                    <th>Товар</th>
                                    <th>Компания</th>
                                    <th>Количество</th>
                                    <th>Цена</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var product in Model)
                                {   
                                    <tr>
                                        <td style="min-width: 0;">@product.Title</td>
                                        <td style="min-width: 0;">@product.Brand</td>   
                                        <td style="min-width: 0;">@product.Count</td>
                                        <td style="min-width: 0;">@product.Price</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <h5>Заявка на пополнения склада у поставщика</h5>
                    <form asp-action="CreateApplication" asp-controller="Manager" method="post">
                        <p for="collector" style="float: left; font-size: 16px;">Выберите : </p>
                        <p style="font-size: 16px">
                            <select id="collector" name="productId" asp-items="productsItems">
                                <option value="0">Продукт</option>
                            </select>
                        </p>
                        <p style="font-size: 16px">
                            Кол-во : <input type="number" name="count" value="0" style="width: 20%" />
                        </p>
                        <p>
                            <button class="btn btn-sm btn-radius btn-default">Отправить</button>
                        </p>
                    </form>
            </div>
        </div>
    </div>
</div>