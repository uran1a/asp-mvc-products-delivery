@model ProductsDelivery.Models.Collector
@{
    string day = @Model.Data_Of_Birth.Date.Day.ToString();
    int month = @Model.Data_Of_Birth.Date.Month;
    string year = @Model.Data_Of_Birth.Date.Year.ToString();
    string monthNewFormat = (month > 10) ? month.ToString() : "0"+month.ToString();
    string birthday = year + "-" + monthNewFormat + "-" + day;
}
<div class="account-dashboard section-fluid-500 section-top-gap-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="tab-content dashboard_content">
                    <div class="tab-pane fade active col-lg-12" id="physical-entity">
                        <h3>Персональные данные</h3>
                        <div class="col-sm-12 col-md-5 col-lg-5">
                            <form asp-action="UpdateCollector" asp-controller="Collector" method="post" asp-anti-forgery="true">
                                <input type="hidden" asp-for="Id" value="@Model.Id" />
                                <div class="default-form-box mb-15">
                                    <label asp-for="Login">Логин <span>*</span></label>
                                    <input type="text" asp-for="Login" value="@Model.Login" />
                                    <span asp-validation-for="Login" />                      
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="Password">Пароль <span>*</span></label>
                                    <input type="text" asp-for="Password" value="@Model.Password"/>
                                    <span asp-validation-for="Password" />
                                </div>
                                <input type="hidden" asp-for="Id" value="@Model.Id" />
                                <div class="default-form-box mb-20">
                                    <label asp-for="Name">Имя <span>*</span></label>
                                    <input type="text" asp-for="Name" value="@Model.Name"/>
                                    <span asp-validation-for="Name" />
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="Surname">Фамилия <span>*</span></label>
                                    <input type="text" asp-for="Surname" value="@Model.Surname"/>
                                    <span asp-validation-for="Surname" />
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="Patronymic">Отчество</label>
                                    <input type="text" asp-for="Patronymic" value="@Model.Patronymic"/>
                                    <span asp-validation-for="Patronymic" />
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="Data_Of_Birth">Дата рождения <span>*</span></label>
                                    <input type="date" asp-for="Data_Of_Birth" value="@birthday"/>
                                    <span asp-validation-for="Data_Of_Birth" />
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="Mobile_Phone">Моб. телефон</label>
                                    <input type="text" asp-for="Mobile_Phone" value="@Model.Mobile_Phone" />
                                    <span asp-validation-for="Mobile_Phone" />
                                </div>
                                <div class="default-form-box mb-20">
                                    <label asp-for="HourShift">Часовая смена</label>
                                    <input type="number" asp-for="HourShift" value="@Model.HourShift"/>
                                    <span asp-validation-for="HourShift" />
                                </div>
                                <br>
                                <div class="save_button mt-3">
                                    <button class="btn btn-sm btn-default-outline" style="margin-bottom: 50px" type="submit">Сохранить</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




